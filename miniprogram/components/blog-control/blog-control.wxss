.ctrl {
  display: flex;
  align-items: center;
  background: #fff;
  height: 80rpx;
  border-top: 1px solid #f0f0f0;
  border-radius:0rpx 0rpx 20rpx 20rpx;
  justify-content: space-between;
  padding: 0 10rpx;
}

.ctrl-item {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #2e2e2e;
  font-family: Arial,
                 "PingFang SC",
                 "Hiragino Sans GB",
                 STHeiti,
                 "Microsoft YaHei",
                 "WenQuanYi Micro Hei",
                 sans-serif;
  font-size: 26rpx;
}

.ctrl-item .icon {
  font-size: 32rpx;
  margin: 12rpx;
}

.ctrl-item text {
  font-size: 30rpx;
}

.share {
  color: #15966b;
}

.share-btn {
  color: #15966b;
  border: none;
  background-color: transparent;
  outline: none;
  height: 100%;
  padding: 0;
  
}

.share-btn::after {
  display: none;
}

.comment-content {
  width: 90%;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-radius: 30rpx;
  padding: 30rpx;
  caret-color: #15966b;
}

.send-btn {
  position: absolute;
  right: 4rpx;
  bottom: 20rpx;
  background:#15966b;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
}
.emoji{
  width: 50px;
  height: 50px;
 margin-top: 11%;
 margin-right: 1px;
  display: inline-block;
}

  

.emoji-popover {  
 
  position: fixed;  
height:40px ;
margin-left: 8px;
top: 60%;
 z-index: 9999; 

  background-color: white;  

}  
  
.emoji-item {  
 width: 50px;
 height: 50px;
margin-top: 10px;
margin-right: 1px;
 display: inline-block;
}  
  
.popover-close {  
 
  margin-top: 6px;
  padding: 0px;
  width: 50px;
  height: 20px;
  font-size: 22rpx;
  color: #9e9e9e;
  display: inline-block;
}  