.playlist-container {
  position: relative;
  width: 200rpx;
  padding-bottom: 20rpx;
  
}

.playlist-img {
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.8); 
}

.playlst-img-mask {
  position: absolute;
  background-image: linear-gradient(-180deg, rgba(0, 0, 0, 0.4) 50rpx, rgb(0, 0, 0, 0.1) 100rpx, rgba(0, 0, 0, 0));
  z-index: 1;
  width: 100%;
  height: 220rpx;
  top: 0;
  left: 0;
  border-radius: 20rpx;

}

.playlist-playcount {
  position: absolute;
  right: 14rpx;
  top: 8rpx;
  padding-left: 40rpx;
  color: #fff;
  font-size: 24rpx;
  z-index: 2;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 0.6);
  background: url(data:image/svg+xml;base64,) no-repeat;
}

.playlist-name {
  line-height: 1.3;
  font-size: 26rpx;
  padding: 2px 0 0 6px;
  display: -webkit-box;
   display: -moz-box;
  -webkit-box-orient: vertical;
   -moz-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
