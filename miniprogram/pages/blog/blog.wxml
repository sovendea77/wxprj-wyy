<view>
	<!--pics文件夹下的background.jpg文件-->
	<image class='background' src="../../images/background.jpg" mode="aspectFill"></image>
	<!--页面其它部分-->
</view>
<view>
<swiper >
	<swiper-item>
		<image src="https://img.z4a.net/images/2024/06/01/lunbo1.png" style="width:100%;height:230px;" />
	</swiper-item>
	<swiper-item >
		<image src="https://img.z4a.net/images/2024/06/01/lunbo2.png" style="width:100%;height:230px;" />
	</swiper-item>
	<swiper-item>
		<image src="https://img.z4a.net/images/2024/06/01/lunbo3.png" style="width:100%;height:230px;" />
	</swiper-item>
</swiper>
</view>
<view>
    <!--日记头部  -->
    <view class="blog-header">
      <view class="blog-search" >
        <x-search 
        bind:search="goSearch"
        bind:confirmSearch="goSearch"
         />
      </view>
      <view class="blog-publish" bindtap="onPublish">
      <text class="nav">快发表你的音乐笔记吧</text>
        <i class="iconfont icon-fabu"></i>
      </view>
    </view>
  </view>

<!-- 无数据时提示  -->
  <view class="blog-empty" wx:if="{{!blogList.length}}">
      <image class="empty-img" src="../../images/show-miss.png"></image>
      <view class="blog-content">
          <text class="blog-tip">这是一片无人之地~</text>
          <button class="blog-send" bindtap="onPublish">写点什么</button>
      </view>
  </view>

    <!--日记列表 -->
    <view class="blog-list">
      <block  wx:for="{{blogList}}" wx:key="_id">
        <view class="blog-panel">
          <x-blog-card 
            blog="{{item}}"
            bind:tap="goComment"
            data-blogid="{{item._id}}"
            />
            <x-blog-control
              iconfont="iconfont"
              icon-pinglun="icon-pinglun"
              icon-fenxiang="icon-fenxiang"
              blog="{{item}}"
              blogid="{{item._id}}"
              blogower="{{item.userName}}"
            />
        </view>
      </block>
    </view> 

    <!--日记底部授权弹出层  -->
    <x-author isShowPopup="{{isShowPopup}}"
        bind:loginsuccess="onLoginSuccess"
        bind:loginfail="onLoginFail"
    >
    </x-author>

    <!-- 全局音乐tab -->
    <x-global-music />
