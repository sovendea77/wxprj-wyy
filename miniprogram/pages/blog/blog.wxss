  margin-bottom: 20rpx;
  box-sizing: border-box;
  width:360rpx;
  margin:10rpx 10rpx;
}

/* 博客列表没有数据时 */

.blog-empty {
  position: absolute;
  top: 60%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 320rpx;
  z-index: 98;
  text-align: center;
  opacity: 0;
  animation-duration: 2s;
  animation-name: slidein;
  animation-fill-mode: forwards;
}

@keyframes slidein {
  0% {
    opacity: 0
  }

  40%{
    opacity: 0
  }

  60%{
    opacity: 0.5
  }

  100% {
    opacity: 1
  }
}

.empty-img {
  position: absolute;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 360rpx;
  height: 270rpx;
}

