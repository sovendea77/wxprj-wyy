.playlist-container{
  display:  flex;
  flex-wrap: wrap;
  justify-content:  space-around;
  margin-top: 10rpx;
  flex-direction: row;
}
.swiperImg{
  width: 100%;
  height: 100%;
}
.search-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  padding: 0 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  z-index: 99;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
}

.search-header {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80 rpx;
}

.search {
  display: flex;
  flex: 1;
}

x-search{
  width: 100%;
}