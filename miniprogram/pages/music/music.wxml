<!-- 搜索栏 -->
<view class="search-container">
    <view class="search-header">
      <view class="search" >
        <x-combobox selectArray='{{selectArray}}'  bind:select='select' />
        <x-search bind:search="goSearch" bind:confirmSearch="goSearch"/>
      </view>
    </view>
</view>

<view class="rec">精品歌单</view>
<view class="card-theme">
  <t-swiper
    display-multiple-items="2"
    current="{{current}}"
    autoplay="{{autoplay}}"
    duration="{{duration}}"
    interval="{{interval}}"
    bind:click="onTap"
    list="{{swiperList}}"
    image-props="{{ { shape: 'round' } }}"
    t-class-nav="card-theme-nav"
  />
</view>

<view class="high">热门歌单</view>
<!-- 歌单列表 -->
<view class="playlist-container">
  <block wx:for="{{playlist}}"  wx:key="_id">
      <x-playlist playlist="{{item}}">
      </x-playlist>
  </block>
</view>

<!-- 全局音乐tab -->
<x-global-music />
